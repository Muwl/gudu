<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/resert_title"
        layout="@layout/activity_title" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:background="@color/division" />

    <EditText
        android:id="@+id/resert_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/bom_text_normal"
        android:textColorHint="@color/text_hint"
        android:textSize="@dimen/second_font" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:background="@color/division" />


    <EditText
        android:id="@+id/resert_respwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:hint="请再次输入密码"
        android:inputType="textPassword"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/bom_text_normal"
        android:textColorHint="@color/text_hint"
        android:textSize="@dimen/second_font" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/division" />


    <TextView
        android:id="@+id/resert_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/red_btn"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/second_font" />
</LinearLayout>