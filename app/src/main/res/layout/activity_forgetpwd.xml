<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/forgetpwd_title"
        layout="@layout/activity_title"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/division"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/forgetpwd_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:hint="请输入手机号"
        android:background="@color/white"
        android:inputType="phone"
        android:textSize="@dimen/second_font"
        android:textColor="@color/bom_text_normal"
        android:textColorHint="@color/text_hint"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/division"
        android:layout_marginLeft="15dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/forgetpwd_getcode"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/white_btn"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/head_bg"
            android:layout_centerVertical="true"
            android:text="获取验证码"
            android:textSize="@dimen/second_font"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"/>

        <EditText
            android:id="@+id/forgetpwd_code"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@id/forgetpwd_getcode"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_centerVertical="true"
            android:hint="请输入手机验证码"
            android:background="@color/white"
            android:textSize="@dimen/second_font"
            android:textColor="@color/bom_text_normal"
            android:textColorHint="@color/text_hint"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/division"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/second_font"
        android:textColor="#969696"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="为了安全我们会向您的手机发送验证码"/>


    <TextView
        android:id="@+id/forgetpwd_next"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:textColor="@color/white"
        android:textSize="@dimen/second_font"
        android:text="下一步"
        android:paddingTop="10dp"
        android:clickable="true"
        android:paddingBottom="10dp"
        android:background="@drawable/red_btn"
        android:gravity="center"
        android:layout_height="wrap_content" />
</LinearLayout>